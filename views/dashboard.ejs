<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>SEA Salon</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@100..900&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/css/style.css">
</head>

<body style="font-family: 'Inter',sans-serif;">

    <!-- NAVBAR -->
    <nav class="navbar navbar-expand-lg position-sticky top-0 " style="z-index: 10; background-color: #ED569B;">
        <div class="container">
            <a class="navbar-brand" href="#" id="bold" style="color: white; font-weight: 800; font-size: 1.5rem;">SEA
                Salon</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false"
                aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
                    <li class="nav-item mx-3">
                        <a class="nav-link active" aria-current="page" href=""
                            style="color: white; font-weight: 600; font-size: 1.2rem; text-decoration: underline;">Dashboard</a>
                    </li>
                    <li class="nav-item mx-3">
                        <a class="nav-link active" aria-current="page" href="/logout"
                            style="color: white; font-weight: 600; font-size: 1.2rem;">Logout</a>
                    </li>

            </div>
        </div>
    </nav>

    <h1 class="text-center mt-5">Admin Dashboard</h1>

    <div class="container mt-5 mb-5">

        <h1>Branch Available</h1>

        <div class="d-flex flex-column overflow-y-scroll px-3 py-2"
            style=" overflow-x: hidden; height: 20rem; width: 100%; margin: 0px; align-items: center; border-radius: 0.5rem; background-color: #FFE0F8;">


            <% branch_list.forEach(item => { %>
            <div class="card m-3" style="width: 80vw;">
                <div class="card-header">
                    Branch Id: <%= item.id %>
                </div>
                <div class="card-body">
                    <h5 class="card-title">Branch name: <%= item.name %></h5>
                    <p class="card-text">Location: <%= item.location %></p>
                    <p class="card-text">Open: <%= item.open_time %></p>
                    <p class="card-text">Close: <%= item.close_time %></p>
                </div>
              
            </div>
            <% }) %>
        </div>
        <h2 class="text-center mt-5">Add New Branch</h2>
        <form action="" method="post" class="p-5 mt-5" style="background-color: #FFE0F8; border-radius: 0.5rem;">
            <div class="input-group mb-3">
                <input type="text" class="form-control" id="branch_name" placeholder="Name" aria-label="Name" aria-describedby="basic-addon1">
            </div>
            <div class="input-group">
                <textarea class="form-control" id="branch_location" aria-label="Location" placeholder="Location"></textarea>
            </div>
            <div class="input-group mb-3 mt-3">
                <span class="input-group-text" id="basic-addon1">Open Time</span>
                <input type="time" min="1" max="5" class="form-control"id="branch_open"  placeholder="Open" aria-label="Name" aria-describedby="basic-addon1">
            </div>
            <div class="input-group mb-3 mt-3">
                <span class="input-group-text" id="basic-addon1">Close Time</span>
                <input type="time" min="1" max="5" class="form-control"id="branch_close"  placeholder="Close" aria-label="Name" aria-describedby="basic-addon1">
            </div>
            <p class="text-center" id="add_branch_message" style="color: red;"></p>
            <div class="d-flex align-items justify-content-center mt-3">
                <button type="button" class="btn" style="width: 8rem; background-color: #ED569B; color: white;" onclick="addNewBranch()">Add</button>
            </div>
        </form>
    </div>

    <div class="container mt-5 mb-5">

        <h1>Service Available</h1>

        <div class="d-flex flex-column overflow-y-scroll px-3 py-2"
            style=" overflow-x: hidden; height: 20rem; width: 100%; margin: 0px; align-items: center; border-radius: 0.5rem; background-color: #FFE0F8;">

            <% service_list.forEach(item => { %>
            <div class="card m-3" style="width: 80vw;">
                <div class="card-header">
                  Service Id: <%= item.id %>
                </div>
                <div class="card-body">
                  <h5 class="card-title">Service Name: <%= item.name %></h5>
                  <p class="card-text">Duration per session: <%= item.session_duration %></p>
                  
                </div>
              </div>
            <% }) %>
        </div>

        <h2 class="text-center mt-5">Add New Service</h2>
        <form action="" method="post" class="p-5 mt-5" style="background-color: #FFE0F8; border-radius: 0.5rem;">
            <div class="input-group mb-3">
                <input type="text" class="form-control" id="service_name" placeholder="Name" aria-label="Name" aria-describedby="basic-addon1">
            </div>
            
            <div class="input-group mb-3 mt-3">
                <input type="number" min="1" max="24" class="form-control"id="service_duration"  placeholder="Duration per session" aria-label="Name" aria-describedby="basic-addon1">
            </div>
            
            <p class="text-center" id="add_service_message" style="color: red;"></p>
            <div class="d-flex align-items justify-content-center mt-3">
                <button type="button" class="btn" style="width: 8rem; background-color: #ED569B; color: white;" onclick="addNewService()">Add</button>
            </div>
        </form>

    </div>



    <footer class="container-fluid pt-3 mt-5 text-center d-flex flex-column align-items-center justify-content-center"
        style="height: auto; background-color: #ED569B; bottom: 0; line-height: 0.5rem;">
        <p style="color: white;">Contact Us</p>
        <p style="color: white;">Thomas 08123456789</p>
        <p style="color: white;">Sekar 08164829372</p>
    </footer>

    <script src="/js/dashboardScript.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
        crossorigin="anonymous"></script>
</body>

</html>