    <h1 class="text-center mt-5">Reservation</h1>
    <form id="reservationForm" action="" method="post" class="container d-flex justify-content-center align-items">
        <div class="input-group p-5 d-flex flex-column" style="width: 40rem; background-color: #FFE0F8;">
            <div class="mb-4">
                <input type="text" class="form-control" id="name" placeholder="Name" aria-label="Name"
                    aria-describedby="basic-addon1">
            </div>

            <div class="mb-4">
                <input type="text" class="form-control" id="phone_number" placeholder="Phone Number"
                    aria-label="Phone Number" aria-describedby="basic-addon1">
            </div>
            <div class="input-group mb-3">
                <label class="input-group-text" for="inputGroupSelect01">Service</label>
                <select class="form-select" id="service">
                    <option value="Haircuts and Styling">Haircuts and Styling</option>
                    <option value="Manicure and Pedicure">Manicure and Pedicure</option>
                    <option value="Facial Treatment">Facial Treatment</option>
                </select>
            </div>
            <div class="mb-4">
                <input type="date" class="form-control" id="date_when" placeholder=""
                    aria-label="date when" aria-describedby="basic-addon1">
            </div>
            <div class="input-group mb-3">
                <label class="input-group-text" for="inputGroupSelect01">Session Time</label>
                <select class="form-select" id="session_time">

                    <option value="09.00 - 10.00">09.00 - 10.00</option>
                    <option value="10.00 - 11.00">10.00 - 11.00</option>
                    <option value="11.00 - 12.00">11.00 - 12.00</option>
                    <option value="12.00 - 13.00">12.00 - 13.00</option>
                    <option value="13.00 - 14.00">13.00 - 14.00</option>
                    <option value="14.00 - 15.00">14.00 - 15.00</option>
                    <option value="15.00 - 16.00">15.00 - 16.00</option>
                    <option value="16.00 - 17.00">16.00 - 17.00</option>
                    <option value="17.00 - 18.00">17.00 - 18.00</option>
                    <option value="18.00 - 19.00">18.00 - 19.00</option>
                    <option value="19.00 - 20.00">19.00 - 20.00</option>
                    <option value="20.00 - 21.00">20.00 - 21.00</option>
                </select>
            </div>
            <p class="text-center" id="reservation_form_message" style="color: red;"></p>
            <div class="d-flex align-items justify-content-center mt-3">
                <button type="submit" class="btn"
                    style="width: 8rem; background-color: #ED569B; color: white;">Submit</button>
            </div>
        </div>
    </form>

    <footer class="container-fluid pt-3 mt-5 text-center d-flex flex-column align-items-center justify-content-center"
        style="height: auto; background-color: #ED569B; bottom: 0; line-height: 0.5rem;">
        <p style="color: white;">Contact Us</p>
        <p style="color: white;">Thomas 08123456789</p>
        <p style="color: white;">Sekar 08164829372</p>
    </footer>

    <script src="/js/reservationScript.js"></script>

